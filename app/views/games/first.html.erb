<% ai = [0,1,2] %>
<% pl = [0,1,2] %>
<% final = Array.new %>
<% a = Array.new %>
<% b = Array.new %>
<% for i in 1..3 %>
<% fr = ai.delete_at(rand(ai.length)) %>
<% sigh = pl.delete_at(rand(pl.length)) %>
<% a << fr %>
<% b << sigh %>
<% if sigh == fr %>
<%   final <<"무승부"  %>
<% elsif sigh == 0 %>
<%   if fr == 2 %>
<%     final <<"승" %>
<%   else %>
<%     final <<"패" %>
<%   end %>
<% elsif sigh == 1 %>
<%   if fr == 0 %>
<%     final <<"승" %>
<%   else %>
<%     final <<"패" %>
<%   end %>
<% elsif sigh == 2 %>
<%   if fr == 1 %>
<%     final <<"승" %>
<%   else %>
<%       final <<"패" %>
<%   end %>
<% else %>
<%    %>
<% end %>
<% end %>

